<Page x:Class="MiserlyMiser.Pages.CashesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MiserlyMiser.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CashesPage"
      DataContext="{Binding CashesPageViewModel, Source={StaticResource Locator}}">
    <Grid>
        <DataGrid AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserSortColumns="False"
                  ItemsSource="{Binding Cashes}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Width="*" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Сумма" Width="*" Binding="{Binding Money}"/>
                <DataGridTextColumn Header="Валюта" Width="*" Binding="{Binding Currency}"/>
                <DataGridTextColumn Header="Тип" Width="*" Binding="{Binding CashType}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
